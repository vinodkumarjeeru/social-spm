<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>socialapp</display-name>
	<context-param>
		<param-name>log4j-config</param-name>
		<param-value>classpath:log4j.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.socialapp.web.utils.AppContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>FBLoginController</servlet-name>
		<servlet-class>org.socialapp.web.controller.FBLoginController</servlet-class>
		<init-param>
			<param-name>app.config.oauth.facebook.apikey</param-name>
			<param-value>270090566491667</param-value>
		</init-param>
		<init-param>
			<param-name>app.config.oauth.facebook.apisecret</param-name>
			<param-value>222d618864f2297e218e9023ea8f1089</param-value>
		</init-param>
		<init-param>
			<param-name>app.config.oauth.facebook.callback</param-name>
			<param-value>http://localhost:8080/socialapp/home</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>FBLoginController</servlet-name>
		<url-pattern>/login.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>org.socialapp.web.controller.HomeController</servlet-class>
		<init-param>
			<param-name>app.config.oauth.facebook.apikey</param-name>
			<param-value>270090566491667</param-value>
		</init-param>
		<init-param>
			<param-name>app.config.oauth.facebook.apisecret</param-name>
			<param-value>222d618864f2297e218e9023ea8f1089</param-value>
		</init-param>
		<init-param>
			<param-name>app.config.oauth.facebook.callback</param-name>
			<param-value>http://localhost:8080/socialapp/home</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>org.socialapp.web.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ForgotPasswordController</servlet-name>
		<servlet-class>org.socialapp.web.controller.ForgotPasswordController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForgotPasswordController</servlet-name>
		<url-pattern>/getPassword</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DistrictController</servlet-name>
		<servlet-class>org.socialapp.web.controller.DistrictController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DistrictController</servlet-name>
		<url-pattern>/district</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>XUserController</servlet-name>
		<servlet-class>org.socialapp.web.controller.XUserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>XUserController</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SocialSignInController</servlet-name>
		<servlet-class>org.socialapp.web.controller.SocialSignInController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SocialSignInController</servlet-name>
		<url-pattern>/authenticate</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/errorPage.jsp</location>
	</error-page>
</web-app>